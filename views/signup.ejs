<%- include('partials/header') %>

<section class="page">
	<!-- ***** Page Top Start ***** -->
	<div class="cover bg-image-top">
		<div class="page-top">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<h1>Sign Up</h1>
					</div>
					<div class="col-lg-12">
						<ol class="breadcrumb">
							<li><a href="index">Home</a></li>
							<li class="active">Sign up</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- ***** Page Top End ***** -->

	<!-- ***** Page Content Start ***** -->

	<div class="container-fluid my-5">
		<div class="row justify-content-center">
			<div class="col-md-5 img-login ">
				<img src="/assets/images/photos/bg/5236.png" class="img-fluid" alt="">

			</div>
			<div class="offset-md-1 col-md-5">
				<div class="card login-card">
					<div class="card-body mt-3  justify-content-center">
						<h3 class="text-center login-head">Sign Up</h3>
						<p class="text-muted text-center mb-4">Already an user ? <a href="login">Login</a></p>
						<!-- <p class="text-muted text-center mb-4">Login to stay updated on your professional world.</p> -->

						<form class="mx-4 " action="/local/register" method="POST">
							<div class="form-group pt-2 ">
								<i class="fa fa-user"></i>
								<label for="">Full name</label>
								<input type="text" class="form-control login-form" name="name" id=""
									placeholder="eg: James Smith">
							</div>
							<div class="form-group pt-2 ">
								<i class="fa fa-envelope"></i>
								<label for="">Email</label>
								<input type="email" class="form-control login-form" name="username" id=""
									placeholder="eg: abc@xyz.com">
							</div>
							<div class="form-group pt-3">
								<i class="fa fa-lock"></i>
								<label for="">Password</label>
								<input class="form-control login-form" type="password" name="password" id="Pass"
									placeholder="Password">
							</div>
							<div class="form-group pt-3">
								<i class="fa fa-lock"></i>
								<label for="">Confirm Password</label>
								<input class="form-control login-form" type="password" name="confirmpassword"
									id="matchPass" placeholder="Retype Password" onkeyup="check()">
							</div>


							<div class="form-group pt-2 row justify-content-center ">
								<button class="btn btn-primary  btn-block login-btn " id="signButton" disabled>SIGN
									UP</button>
							</div>

						</form>

						<div class="row justify-content-center">
							<p class="text-muted mt-3">or login using</p>
							<div class="col-lg-12 text-center ">

								<a href="/google/login"><i class="fa fa-google login-social-icon"></i></a>
								<a href="/linkedin/login"><i class="fa fa-linkedin-square login-social-icon"></i></a>
								<a href="/github/login"><i class="fa fa-github login-social-icon"></i></a>

							</div>
						</div>
					</div>
				</div>
			</div>


		</div>

	</div>
	</div>
	<!-- ***** Page Content End ***** -->
</section>



<script>
	function check() {
		Pass = document.getElementById("Pass");
		matchPass = document.getElementById("matchPass");
		if (Pass.value == matchPass.value) {
			document.getElementById("signButton").disabled = false;
		} else {
			document.getElementById("signButton").disabled = true;
		}
	}

</script>
<%- include('partials/footer') %>